<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="mainBorderPane"
            maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="700.0" minWidth="1100.0"
            prefHeight="700.0" prefWidth="1100.0"
            styleClass="root-pane"
            stylesheets="@../../../css/Dashboard.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cloudstorage.fx.controllers.DashboardController">

    <left>
        <VBox prefHeight="700.0" prefWidth="240.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" top="30.0" left="10.0" right="10.0"/>
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Circle fx:id="userPicture" radius="35.0" stroke="WHITE" strokeWidth="2.0" styleClass="profile-pic-main"/>
                        <Label fx:id="userLabel" styleClass="user-label" text="Hello,"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0"/>
                    </VBox.margin>
                </VBox>

                <Button fx:id="btnMyCloud" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false"
                        maxWidth="Infinity" prefHeight="50.0"
                        styleClass="nav-button, nav-button-active" text="My cloud"
                        onAction="#handleShowMyCloud">
                    <graphic>
                        <FontIcon iconLiteral="fas-cloud" styleClass="nav-icon-active"/>
                    </graphic>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Button>

                <Button fx:id="btnSharedFiles" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false"
                        maxWidth="Infinity" prefHeight="50.0"
                        styleClass="nav-button" text="Shared Files"
                        onAction="#handleShowSharedFiles">
                    <graphic>
                        <FontIcon iconLiteral="fas-share-alt" styleClass="nav-icon"/>
                    </graphic>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Button>

                <Button fx:id="btnFavorites" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false"
                        maxWidth="Infinity" prefHeight="50.0"
                        styleClass="nav-button" text="Favorites"
                        onAction="#handleShowFavorites">
                    <graphic>
                        <FontIcon iconLiteral="fas-star" styleClass="nav-icon"/>
                    </graphic>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Button>

                <Button fx:id="btnUpload" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false"
                        maxWidth="Infinity" prefHeight="50.0"
                        styleClass="nav-button" text="Upload Files"
                        onAction="#handleUpload">
                    <graphic>
                        <FontIcon iconLiteral="fas-upload" styleClass="nav-icon"/>
                    </graphic>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Button>

                <Region VBox.vgrow="ALWAYS"/>

                <Button fx:id="btnSettings" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false"
                        maxWidth="Infinity" prefHeight="50.0"
                        styleClass="nav-button" text="Settings"
                        onAction="#handleSettings">
                    <graphic>
                        <FontIcon iconLiteral="fas-cog" styleClass="nav-icon"/>
                    </graphic>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Button>

                <Button fx:id="logoutButton" alignment="BASELINE_LEFT" graphicTextGap="20.0" mnemonicParsing="false"
                        maxWidth="Infinity" prefHeight="50.0"
                        styleClass="nav-button" text="Log Out"
                        onAction="#handleLogout">
                    <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" styleClass="nav-icon"/>
                    </graphic>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <VBox fx:id="dashboardView" spacing="25.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
            <children>
                <HBox spacing="25.0" VBox.vgrow="ALWAYS">
                    <children>

                        <VBox spacing="30.0" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox spacing="15.0">
                                    <children>
                                        <Label styleClass="section-title" text="Categories"/>
                                        <HBox spacing="15.0">
                                            <children>
                                                <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="120.0"
                                                      prefHeight="120.0" styleClass="category-card, card-purple">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <HBox alignment="TOP_RIGHT">
                                                            <Label fx:id="lblImageCount" styleClass="category-badge" text="0"/>
                                                        </HBox>
                                                        <Label styleClass="category-icon" text="ðŸ“·"/>
                                                        <Label styleClass="category-title" text="Pictures"/>
                                                    </children>
                                                    <effect><DropShadow color="#6c5ce74d" offsetY="5.0"/></effect>
                                                </VBox>

                                                <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="120.0"
                                                      prefHeight="120.0" styleClass="category-card, card-green">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <HBox alignment="TOP_RIGHT">
                                                            <Label fx:id="lblDocCount" styleClass="category-badge" text="0"/>
                                                        </HBox>
                                                        <Label styleClass="category-icon" text="ðŸ“„"/>
                                                        <Label styleClass="category-title" text="Documents"/>
                                                    </children>
                                                    <effect><DropShadow color="#00b8944d" offsetY="5.0"/></effect>
                                                </VBox>

                                                <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="120.0"
                                                      prefHeight="120.0" styleClass="category-card, card-pink">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <HBox alignment="TOP_RIGHT">
                                                            <Label fx:id="lblVideoCount" styleClass="category-badge" text="0"/>
                                                        </HBox>
                                                        <Label styleClass="category-icon" text="ðŸŽ¥"/>
                                                        <Label styleClass="category-title" text="Videos"/>
                                                    </children>
                                                    <effect><DropShadow color="#e843934d" offsetY="5.0"/></effect>
                                                </VBox>

                                                <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="120.0"
                                                      prefHeight="120.0" styleClass="category-card, card-blue">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <HBox alignment="TOP_RIGHT">
                                                            <Label fx:id="lblAudioCount" styleClass="category-badge" text="0"/>
                                                        </HBox>
                                                        <Label styleClass="category-icon" text="ðŸŽ¤"/>
                                                        <Label styleClass="category-title" text="Audio"/>
                                                    </children>
                                                    <effect><DropShadow color="#0984e34d" offsetY="5.0"/></effect>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <VBox spacing="15.0">
                                    <children>
                                        <Label styleClass="section-title" text="Files"/>
                                        <HBox fx:id="foldersContainer" spacing="15.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#handleAddFolder"
                                                        prefHeight="100.0" prefWidth="80.0"
                                                        styleClass="add-folder-btn" text="+">
                                                    <effect><DropShadow color="#0000000d" offsetY="3.0"/></effect>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="section-title" text="Recent Files"/>

                                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                                                    style="-fx-background-color: transparent; -fx-background: transparent;"
                                                    VBox.vgrow="ALWAYS">
                                            <content>
                                                <VBox fx:id="filesContainer" spacing="10.0">
                                                </VBox>
                                            </content>
                                        </ScrollPane>

                                    </children>
                                </VBox>

                            </children>
                        </VBox>

                        <VBox minWidth="280.0" prefWidth="280.0" spacing="30.0">
                            <children>
                                <VBox alignment="CENTER" prefHeight="220.0" spacing="20.0" styleClass="right-widget" onMouseClicked="#handleUpload">
                                    <children>
                                        <SVGPath content="M38.5,21.8h-10v-10c0-2.3-1.9-4.2-4.2-4.2s-4.2,1.9-4.2,4.2v10h-10c-2.3,0-4.2,1.9-4.2,4.2s1.9,4.2,4.2,4.2h10v10 c0,2.3,1.9,4.2,4.2,4.2s4.2-1.9,4.2-4.2v-10h10c2.3,0,4.2-1.9,4.2-4.2S40.8,21.8,38.5,21.8z"
                                                 fill="#0984e3" scaleX="1.5" scaleY="1.5"/>
                                        <Label styleClass="widget-title" text="Add new files"/>
                                    </children>
                                    <effect><DropShadow color="#0000001a" offsetY="5.0"/></effect>
                                </VBox>

                                <VBox prefHeight="150.0" spacing="10.0" styleClass="right-widget-padded">
                                    <padding><Insets bottom="15.0" left="25.0" right="25.0" top="25.0"/></padding>
                                    <children>
                                        <HBox>
                                            <children>
                                                <Label styleClass="widget-header" text="Your Storage"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <Label fx:id="sizeLeftPercent" styleClass="storage-text-blue"/>
                                            </children>
                                        </HBox>
                                        <Label fx:id="usedStorageCount" styleClass="storage-text-gray"/>
                                        <ProgressBar fx:id="sizeProgressBar" progress="0.75" styleClass="storage-bar" prefWidth="Infinity"
                                                     maxWidth="Infinity" prefHeight="8">
                                            <VBox.margin><Insets top="5.0"/></VBox.margin>
                                        </ProgressBar>
                                    </children>
                                    <effect><DropShadow color="#0000001a" offsetY="5.0"/></effect>
                                </VBox>

                                <VBox prefHeight="220.0" spacing="20.0" styleClass="right-widget-padded" VBox.vgrow="ALWAYS">
                                    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/></padding>
                                    <children>
                                        <Label styleClass="widget-header" text="Your Shared Folders"/>
                                        <VBox fx:id="sharedFoldersContainer" spacing="12.0">
                                            <!-- Dynamic shared folders will be loaded here -->
                                        </VBox>
                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="add-more-btn" text="+ View All Shared" onAction="#handleViewAllShared">
                                            <padding><Insets bottom="12.0" top="12.0"/></padding>
                                        </Button>
                                    </children>
                                    <effect><DropShadow color="#0000001a" offsetY="5.0"/></effect>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>