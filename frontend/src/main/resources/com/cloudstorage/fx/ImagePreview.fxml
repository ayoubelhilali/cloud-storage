<StackPane style="-fx-background-color: transparent; -fx-padding: 30;"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cloudstorage.fx.controllers.ImagePreviewController">

    <VBox fx:id="rootBox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="550.0"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 20, 0, 0, 10);">

        <AnchorPane VBox.vgrow="ALWAYS" style="-fx-background-radius: 20 20 0 0; -fx-background-color: #f8f9fa;">

            <clip>
                <Rectangle width="550" height="500" arcWidth="20" arcHeight="20" />
            </clip>

            <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" alignment="CENTER">

                <ImageView fx:id="imageView" fitHeight="500.0" fitWidth="550.0" pickOnBounds="true" preserveRatio="true" />

                <VBox fx:id="iconContainer" alignment="CENTER" spacing="20.0" visible="false" style="-fx-background-color: #f0f4f8;">
                    <Label fx:id="typeIcon" text="ðŸ“„" style="-fx-font-size: 100px;"/>
                    <Label fx:id="typeLabel" text="PDF Document" style="-fx-font-size: 18px; -fx-text-fill: #5f6e82;"/>
                </VBox>
            </StackPane>

            <Button onAction="#closeWindow" text="âœ•"
                    style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 50; -fx-min-width: 40; -fx-min-height: 40; -fx-font-size: 16px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);"
                    AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />
        </AnchorPane>

        <VBox spacing="10.0" style="-fx-padding: 25;">
            <children>
                <Label fx:id="fileNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a202c;" text="document.pdf" wrapText="true"/>
                <Label fx:id="dateLabel" style="-fx-font-size: 14px; -fx-text-fill: #718096;" text="2.4 MB â€¢ Modified July 01, 2022" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 10 0 0 0;">
                    <Button text="Share" style="-fx-background-color: #e2e8f0; -fx-text-fill: #2d3748; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-weight: bold;"/>
                    <Button text="Delete" style="-fx-background-color: #fff5f5; -fx-text-fill: #c53030; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-weight: bold;"/>
                    <Button text="Download" style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-weight: bold;"/>
                </HBox>
            </children>
        </VBox>
    </VBox>
</StackPane>