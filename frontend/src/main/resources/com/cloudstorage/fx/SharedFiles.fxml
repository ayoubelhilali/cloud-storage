<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox spacing="30.0" styleClass="root" stylesheets="@../../../css/SharedFiles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloudstorage.fx.controllers.SharedDashboardController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label styleClass="section-title" text="Your shared files" />

        <HBox spacing="20.0">
            <children>
                <VBox prefHeight="130.0" prefWidth="220.0" styleClass="card, card-blue">
                    <children>
                        <HBox>
                            <children>
                                <Circle radius="15.0" styleClass="avatar, avatar-1" />
                                <Circle radius="15.0" styleClass="avatar, avatar-2" translateX="-10.0" />
                                <Circle radius="15.0" styleClass="avatar, avatar-3" translateX="-20.0" />
                            </children>
                        </HBox>
                        <Region VBox.vgrow="ALWAYS" />
                        <Label styleClass="card-title" text="Keynote files" />
                        <Label styleClass="card-subtitle" text="820 files" />
                    </children>
                </VBox>

                <VBox layoutX="10.0" layoutY="10.0" prefHeight="130.0" prefWidth="220.0" styleClass="card, card-white">
                    <children>
                        <HBox>
                            <children>
                                <Circle radius="15.0" styleClass="avatar, avatar-3" />
                                <Circle radius="15.0" styleClass="avatar, avatar-4" translateX="-10.0" />
                            </children>
                        </HBox>
                        <Region VBox.vgrow="ALWAYS" />
                        <Label styleClass="card-title" text="Vacation photos" />
                        <Label styleClass="card-subtitle" text="115 files" />
                    </children>
                </VBox>

                <VBox layoutX="250.0" layoutY="10.0" prefHeight="130.0" prefWidth="220.0" styleClass="card, card-white">
                    <children>
                        <HBox>
                            <children>
                                <Circle radius="15.0" styleClass="avatar, avatar-1" />
                                <Circle radius="15.0" styleClass="avatar, avatar-4" translateX="-10.0" />
                            </children>
                        </HBox>
                        <Region VBox.vgrow="ALWAYS" />
                        <Label styleClass="card-title" text="Project report" />
                        <Label styleClass="card-subtitle" text="65 files" />
                    </children>
                </VBox>

                <Button mnemonicParsing="false" prefHeight="130.0" prefWidth="100.0" styleClass="add-btn" text="+">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <VBox spacing="15.0" VBox.vgrow="ALWAYS">
            <children>
                <Label styleClass="section-subtitle" text="Shared recently" />

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="sharedFilesContainer" spacing="10.0">
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</VBox>