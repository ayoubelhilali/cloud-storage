<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane styleClass="root-overlay"
           stylesheets="@../../../../css/ImagePreview.css"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.cloudstorage.fx.controllers.components.ImagePreviewController">

    <VBox fx:id="rootBox" styleClass="preview-card" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="680.0" prefWidth="600.0">

        <AnchorPane styleClass="preview-header" VBox.vgrow="ALWAYS">
            <clip>
                <Rectangle width="600" height="520" arcWidth="16" arcHeight="16" />
            </clip>

            <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" alignment="CENTER"
                       styleClass="image-container">

                <ImageView fx:id="imageView" fitHeight="500.0" fitWidth="550.0" pickOnBounds="true" preserveRatio="true" visible="false"/>

                <StackPane fx:id="videoOverlay" visible="false" mouseTransparent="true"
                           style="-fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 50%; -fx-max-width: 120; -fx-max-height: 120;">
                    <FontIcon iconLiteral="fas-play-circle" iconSize="100" iconColor="white" opacity="0.9"
                              style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);"/>
                </StackPane>

                <VBox fx:id="iconContainer" alignment="CENTER" spacing="15.0" visible="false" styleClass="file-placeholder">
                    <FontIcon fx:id="typeIcon" iconLiteral="fas-file-alt" iconSize="80" iconColor="#cbd5e0"/>
                    <Label fx:id="typeLabel" text="File Preview" styleClass="file-type-label"/>
                </VBox>
            </StackPane>

            <Button onAction="#closeWindow" styleClass="btn-close" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                <graphic>
                    <FontIcon iconLiteral="fas-times" iconSize="20" iconColor="#4a5568"/>
                </graphic>
            </Button>
        </AnchorPane>

        <VBox styleClass="preview-footer">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                        <Label fx:id="fileNameLabel" text="document.pdf" styleClass="file-name"/>
                        <Label fx:id="dateLabel" text="Loading..." styleClass="file-meta"/>
                    </VBox>
                </HBox>

                <Region prefHeight="20.0" />

                <HBox alignment="CENTER_RIGHT" spacing="12.0">
                    <Button text="Delete" onAction="#handleDeleteButtonAction" styleClass="btn-action, btn-danger">
                        <graphic>
                            <FontIcon iconLiteral="fas-trash-alt" iconSize="14" iconColor="#c53030"/>
                        </graphic>
                    </Button>
                    <Button text="Download" styleClass="btn-action, btn-primary">
                        <graphic>
                            <FontIcon iconLiteral="fas-download" iconSize="14" iconColor="white"/>
                        </graphic>
                    </Button>
                </HBox>
            </children>
        </VBox>
    </VBox>
</StackPane>