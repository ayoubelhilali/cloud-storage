<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox fx:id="root"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cloudstorage.fx.controllers.RegisterController"
      stylesheets="@/css/register.css"
      styleClass="home-root">

    <!-- LEFT SIDE (Form Side) -->
    <VBox fx:id="leftContainer" styleClass="left-container">

        <!-- Top Left: Header Area -->
        <StackPane fx:id="topLeft" styleClass="top-left-section">
            <VBox fx:id="headerBox" alignment="BOTTOM_LEFT" spacing="10">
                <Label text="Create an account" styleClass="header-title"/>
                <Label styleClass="header-subtitle"
                       text="Create an account to access your dashboard and continue storing your files securely."/>
            </VBox>
        </StackPane>

        <!-- Bottom Left: Form Area (Curved Top Right) -->
        <StackPane fx:id="bottomLeft" styleClass="bottom-left-section" VBox.vgrow="ALWAYS">
            <VBox fx:id="formBox" spacing="10" alignment="TOP_LEFT">
                <!-- INPUTS -->
                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <Label text="Complete name:" styleClass="input-label"/>
                    <HBox spacing="10">
                        <TextField fx:id="fnameField" promptText="First name" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                        <TextField fx:id="lnameField" promptText="Last name" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    </HBox>
                </VBox>

                <VBox spacing="5">
                    <Label text="Email:" styleClass="input-label"/>
                    <TextField fx:id="emailField" promptText="example@email.com" styleClass="text-field"/>
                    <Label fx:id="emailError" style="-fx-text-fill: red; -fx-font-size: 0.9em;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Password:" styleClass="input-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
                    <Label fx:id="passwordError" style="-fx-text-fill: red; -fx-font-size: 0.9em;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Confirm password:" styleClass="input-label"/>
                    <PasswordField fx:id="confPasswordField" promptText="Confirm your password" styleClass="text-field"/>
                    <Label fx:id="confirmError" style="-fx-text-fill: red; -fx-font-size: 0.9em;"/>
                </VBox>

                <Region VBox.vgrow="ALWAYS" maxHeight="20"/>

                <Button fx:id="registerButton" text="CREATE ACCOUNT" onAction="#handleRegister"
                        styleClass="register-button" maxWidth="Infinity"/>

                <HBox spacing="5" alignment="CENTER">
                    <Label text="Already have an account?" style="-fx-font-size: 1em"/>
                    <Button styleClass="register-link" text="Login" fx:id="loginButton" onAction="#OpenLoginPage"/>
                </HBox>
            </VBox>
        </StackPane>
    </VBox>

    <!-- RIGHT SIDE (Visual Side) -->
    <VBox fx:id="rightContainer" styleClass="right-container">

        <!-- Top Right: Logo (Blue Background) -->
        <StackPane fx:id="topRight" styleClass="top-right-section">
            <ImageView fx:id="logoImage" preserveRatio="true" smooth="true" onMouseClicked="#OpenHomePage">
                <image>
                    <Image url="@/images/logo.png"/>
                </image>
            </ImageView>
        </StackPane>

        <!-- Bottom Right: Image (Blue Background) -->
        <StackPane fx:id="bottomRight" styleClass="bottom-right-section" VBox.vgrow="ALWAYS">
            <ImageView fx:id="mainImage" preserveRatio="true" smooth="true">
                <image>
                    <Image url="@/images/signup.png"/>
                </image>
            </ImageView>
        </StackPane>
    </VBox>
</HBox>