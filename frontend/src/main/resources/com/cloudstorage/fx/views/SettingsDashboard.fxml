<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToWidth="true" styleClass="modern-scroll-pane" stylesheets="@/css/Settings.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloudstorage.fx.controllers.views.SettingsController">
    <content>
        <VBox spacing="25.0" styleClass="main-container">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="40.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <VBox>
                    <Label styleClass="header-title" text="Account Settings" />
                    <Label styleClass="header-subtitle" text="Manage your profile, storage and security preferences" />
                </VBox>
            </HBox>

            <Separator styleClass="title-separator" />

            <VBox styleClass="modern-card">
                <Label styleClass="card-header" text="Profile Information" />
                <HBox spacing="40.0" alignment="CENTER_LEFT">
                    <VBox alignment="CENTER" spacing="12.0">
                        <StackPane>
                            <Circle fx:id="avatarCircle" radius="55.0" styleClass="avatar-circle" />
                            <Button onAction="#handleUploadAvatar" styleClass="avatar-edit-btn" StackPane.alignment="BOTTOM_RIGHT">
                                <graphic><FontIcon iconLiteral="fas-pen" iconSize="12" /></graphic>
                            </Button>
                        </StackPane>
                    </VBox>

                    <GridPane hgap="25.0" vgap="20.0" HBox.hgrow="ALWAYS">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                        </columnConstraints>
                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label styleClass="field-label" text="FIRST NAME" />
                            <TextField fx:id="firstNameField" styleClass="modern-input" />
                        </VBox>
                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label styleClass="field-label" text="LAST NAME" />
                            <TextField fx:id="lastNameField" styleClass="modern-input" />
                        </VBox>
                        <VBox spacing="8.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <Label styleClass="field-label" text="EMAIL ADDRESS" />
                            <TextField fx:id="emailField" styleClass="modern-input" />
                        </VBox>
                    </GridPane>
                </HBox>
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button onAction="#handleSaveProfile" styleClass="btn-primary" text="Update Profile" />
                </HBox>
            </VBox>

            <VBox styleClass="modern-card">
                <Label styleClass="card-header" text="Storage Dashboard" />
                <HBox spacing="30.0" alignment="CENTER">
                    <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                        <VBox spacing="10">
                            <HBox alignment="BOTTOM_LEFT" spacing="8">
                                <Label fx:id="usageTextLabel" styleClass="usage-amount" text="0 GB" />
                                <Label styleClass="usage-total" text="of 5 GB Used" />
                            </HBox>
                            <ProgressBar fx:id="storageProgressBar" maxWidth="Infinity" progress="0.34" styleClass="modern-progress" />
                            <Label fx:id="percentageLabel" styleClass="usage-hint" text="34% of total capacity" />
                        </VBox>
                        <Button onAction="#handleClearCache" styleClass="btn-outline" text="Optimize Storage &amp; Clear Cache">
                            <graphic><FontIcon iconLiteral="fas-broom" /></graphic>
                        </Button>
                    </VBox>
                    <PieChart fx:id="storagePieChart" labelsVisible="true" legendVisible="true" prefHeight="300" prefWidth="380" />
                </HBox>
            </VBox>

            <HBox spacing="25.0">
                <VBox styleClass="modern-card" HBox.hgrow="ALWAYS">
                    <Label styleClass="card-header" text="Preferences" />
                    <VBox spacing="18.0">
                        <VBox spacing="8.0">
                            <Label styleClass="field-label" text="DOWNLOAD FOLDER" />
                            <HBox spacing="10.0">
                                <TextField fx:id="downloadPathField" editable="false" styleClass="modern-input" HBox.hgrow="ALWAYS" />
                                <Button onAction="#handleBrowseLocation" styleClass="btn-icon">
                                    <graphic><FontIcon iconLiteral="fas-folder-open" /></graphic>
                                </Button>
                            </HBox>
                        </VBox>
                        <VBox spacing="12.0">
                            <CheckBox fx:id="notifyStorage" styleClass="modern-checkbox" text="Storage limit warning" />
                        </VBox>
                    </VBox>
                </VBox>

                <VBox styleClass="modern-card" HBox.hgrow="ALWAYS">
                    <Label styleClass="card-header" text="Security &amp; Account" />
                    <VBox spacing="15.0">
                        <PasswordField fx:id="currentPasswordField" promptText="Current Password" styleClass="modern-input" />
                        <PasswordField fx:id="newPasswordField" promptText="New Password" styleClass="modern-input" />
                        <HBox spacing="10">
                            <Button onAction="#handleChangePassword" styleClass="btn-primary-sm" text="Update Password" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button onAction="#handleDeleteAccount" styleClass="btn-danger-text" text="Delete Account" />
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </content>
</ScrollPane>