<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.control.ProgressBar?>
<VBox spacing="30.0" styleClass="root" stylesheets="@../../../../css/SharedFiles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloudstorage.fx.controllers.views.SharedDashboardController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>


    <Label styleClass="section-title" text="Shared Statistics" />

    <HBox spacing="20.0" alignment="CENTER_LEFT">
        <children>
            <VBox prefHeight="100.0" prefWidth="180.0" styleClass="stat-card, card-purple">
                <children>
                    <FontIcon iconLiteral="fas-camera" iconSize="24" styleClass="stat-icon"/>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="lblSharedImages" styleClass="stat-value" text="0" />
                    <Label styleClass="stat-label" text="Images" />
                </children>
            </VBox>

            <VBox prefHeight="100.0" prefWidth="180.0" styleClass="stat-card, card-pink">
                <children>
                    <FontIcon iconLiteral="fas-video" iconSize="24" styleClass="stat-icon"/>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="lblSharedVideos" styleClass="stat-value" text="0" />
                    <Label styleClass="stat-label" text="Videos" />
                </children>
            </VBox>

            <VBox prefHeight="100.0" prefWidth="180.0" styleClass="stat-card, card-blue">
                <children>
                    <FontIcon iconLiteral="fas-microphone" iconSize="24" styleClass="stat-icon"/>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="lblSharedAudio" styleClass="stat-value" text="0" />
                    <Label styleClass="stat-label" text="Audio Files" />
                </children>
            </VBox>

            <VBox prefHeight="100.0" prefWidth="180.0" styleClass="stat-card, card-green">
                <children>
                    <FontIcon iconLiteral="fas-file-alt" iconSize="24" styleClass="stat-icon"/>
                    <Region VBox.vgrow="ALWAYS" />
                    <Label fx:id="lblSharedDocs" styleClass="stat-value" text="0" />
                    <Label styleClass="stat-label" text="Documents" />
                </children>
            </VBox>
        </children>
    </HBox>

    <VBox spacing="15.0" VBox.vgrow="ALWAYS">
        <children>
            <Label styleClass="section-subtitle" text="All Shared Files" />
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" styleClass="modern-scroll">
                <content>
                    <VBox fx:id="sharedFilesContainer" spacing="10" style="-fx-padding: 10;" />
                </content>
            </ScrollPane>
        </children>
    </VBox>
</VBox>